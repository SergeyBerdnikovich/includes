<h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

  <%= f.error_notification %>



<% if f.full_error :reset_password_token %>
  <font style='color:red'>Password token is expired. Please request new token at the link - <b style='color:red'><%= link_to "request new token", new_password_path(resource_name) %></b></font><br />

  <p>
<% end -%>

  <%= f.input :reset_password_token, :as => :hidden %>
  

  <div class="form-inputs">
    <%= f.input :password, :label => "New password", :required => true, :autofocus => true %>
    <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
